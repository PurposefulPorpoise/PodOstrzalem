<Window x:Class="ProjektObiektowe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektObiektowe"
        xmlns:wpfSfmlHost="clr-namespace:ProjektObiektowe"
        mc:Ignorable="d"    
        Title="Pod Ostrzałem" Height="720" SizeToContent="Width" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Width="1280">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WindowsFormsHost Grid.Row="0" HorizontalAlignment="Right" Width="1280">
            <WindowsFormsHost.Child>
                <wpfSfmlHost:SfmlDrawingSurface x:Name="DrawSurface"/>
            </WindowsFormsHost.Child>
        </WindowsFormsHost>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Height="Auto">
            <Label x:Name="TestLabel" Content="Label" VerticalAlignment="Center" FontSize="20"/>
            <Button x:Name="button" Content="Nie klikać"  VerticalAlignment="Center" Background="Red" />
        </StackPanel>

    </Grid>
</Window>
