<Window x:Class="ProjektObiektowe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektObiektowe"
        xmlns:wpfSfmlHost="clr-namespace:ProjektObiektowe"
        mc:Ignorable="d"    
        Title="Pod Ostrzałem" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="640"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WindowsFormsHost Grid.Row="0" Width="1280" x:Name="Host">
            <WindowsFormsHost.Child>
                <wpfSfmlHost:SfmlDrawingSurface x:Name="DrawSurface"/>
            </WindowsFormsHost.Child>
        </WindowsFormsHost>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="Auto" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <StackPanel.Resources>
                <Thickness x:Key="margines">5,0,0,0</Thickness>
            </StackPanel.Resources>
            <Label x:Name="TestLabel"  Content="{Binding Path=Kolumnyy}" VerticalAlignment="Center" FontSize="20" Margin="{StaticResource margines}"/>
            <Button x:Name="button" Content="Nie klikać"  VerticalAlignment="Center" Background="Red" Margin="{StaticResource margines}" />
            <Rectangle x:Name="PunktyZycia" Height="20" VerticalAlignment="Center" Width="60" Margin="{StaticResource margines}">
                 <!--Powiazac Width z property zwracajacym obecne punkty zdrowia razy szerokosc tekstury (tu 40)-->
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Resources/sciana.png" AlignmentX="Left" TileMode="Tile" Stretch="Uniform" Viewport="0,0,20,20" ViewportUnits="Absolute" />
                </Rectangle.Fill>

            </Rectangle>
        </StackPanel>


    </Grid>
</Window>
